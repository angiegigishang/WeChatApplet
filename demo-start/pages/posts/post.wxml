<import src="post-item/post-item-template.wxml" />
<view>
  <swiper vertical="{{false}}" autoplay="true" interval="5000" indicator-dots="true" >
    <swiper-item>
      <image catchtap="onSwiperItemTap" class="swiper-image" src="/images/wx.png" data-postId="3"></image>
    </swiper-item>
    <swiper-item>
      <image catchtap="onSwiperItemTap" class="swiper-image" src="/images/vr.png" data-postId="4"></image>
    </swiper-item>
    <swiper-item>
      <image catchtap="onSwiperItemTap" class="swiper-image" src="/images/iqiyi.png" data-postId="5"></image>
    </swiper-item>
  </swiper>
  <block wx:for="{{postList}}" wx:key="item">
    <view catchtap="onPostTap" data-postId="{{item.postId}}" data-post-name="name">
     <template is="postItem" data="{{...item}}"/>
    </view>
  </block>
</view>